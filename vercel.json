{
    "version": 2,
    "builds": [
        {
            "src": "controle_acesso/wsgi.py",
            "use": "@vercel/python"
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "controle_acesso/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "controle_acesso.settings"
    }
} 